<div class="container">
  <h3>Add a new Restaurant</h3>

  <%= simple_form_for(@restaurants) do |f| %>
      <%= f.input :name %>
      <%= f.input :phone_number %>
      <%= f.input :address %>
      <%= f.input :category, :collection => Restaurant::CATEGORIES %>
      <%= f.submit %>
      <% end %>
<br>
  <%= link_to 'Back to list', restaurants_path %>

</div>
